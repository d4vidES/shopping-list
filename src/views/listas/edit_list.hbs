<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Lista</h3>
        </div>
        <div class="card-body">
            <form action="/listas/{{list.id}}/edit_list" method="POST">
                <div class="form-group">
                    <input type="text" name="fullname" class="form-control" placeholder="Nombre" value="{{list.fullname}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>